<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:actionMenuTextColor">?attr/primaryText</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--<item name="android:navigationBarColor">@color/black_accent</item>-->
        <!--<item name="windowActionBarOverlay">true</item>-->
    </style>

    <attr name="primaryText" format="reference|color" />
    <attr name="secondaryText" format="reference|color" />

    <attr name="colorRoundedDrawable" format="reference|color" />
    <attr name="colorPlayerController" format="reference|color" />
    <attr name="colorLogo" format="reference|color"/>
    <attr name="colorSeeker" format="reference|color" />

    <style name="Unknown" parent="AppTheme">
        <item name="colorPrimary">@color/unknown_primary</item>
        <item name="colorPrimaryDark">@color/unknown_primary_dark</item>
        <item name="colorAccent">@color/unknown_accent</item>
        <item name="primaryText">@color/unknown_primary_text</item>
        <item name="secondaryText">@color/unknown_secondary_text</item>
        <item name="android:navigationBarColor">@color/unknown_primary</item>
        <item name="colorRoundedDrawable">@color/white</item>
        <item name="colorPlayerController">?secondaryText</item>
        <item name="colorLogo">?secondaryText</item>
        <item name="colorSeeker">?primaryText</item>
    </style>

    <style name="UnknownSecond" parent="AppTheme">
        <item name="colorPrimary">@color/unknown_second_primary</item>
        <item name="colorPrimaryDark">@color/unknown_second_primary_dark</item>
        <item name="colorAccent">@color/unknown_second_accent</item>
        <item name="primaryText">@color/unknown_second_primary_text</item>
        <item name="secondaryText">@color/unknown_second_secondary_text</item>
        <item name="android:navigationBarColor">@color/unknown_second_primary</item>
        <item name="colorRoundedDrawable">@color/unknown_second_primary</item>
        <item name="colorPlayerController">?primaryText</item>
        <item name="colorLogo">?primaryText</item>
        <item name="colorSeeker">?secondaryText</item>
    </style>

    <style name="UnknownThird" parent="AppTheme">
        <item name="colorPrimary">@color/unknown_third_primary</item>
        <item name="colorPrimaryDark">@color/unknown_third_primary_dark</item>
        <item name="colorAccent">@color/unknown_third_accent</item>
        <item name="primaryText">@color/unknown_third_primary_text</item>
        <item name="secondaryText">@color/unknown_third_secondary_text</item>
        <item name="android:navigationBarColor">@color/unknown_third_primary</item>
        <item name="colorRoundedDrawable">@color/unknown_second_primary</item>
        <item name="colorPlayerController">?primaryText</item>
        <item name="colorLogo">@color/unknown_second_primary</item>
        <item name="colorSeeker">@color/unknown_second_primary</item>
    </style>


    <style name="PurpleDark" parent="AppTheme">
        <item name="colorPrimary">@color/purple_dark_primary</item>
        <item name="colorPrimaryDark">@color/purple_dark_primary_dark</item>
        <item name="colorAccent">@color/purple_dark_accent</item>
        <item name="primaryText">@color/purple_dark_primary_text</item>
        <item name="secondaryText">@color/purple_dark_secondary_text</item>
        <item name="android:navigationBarColor">@color/purple_dark_primary</item>
    </style>

    <style name="Black" parent="AppTheme">
        <item name="colorPrimary">@color/black_primary</item>
        <item name="colorPrimaryDark">@color/black_primary_dark</item>
        <item name="colorAccent">@color/black_accent</item>
        <item name="primaryText">@color/black_primary_text</item>
        <item name="secondaryText">@color/black_secondary_text</item>
        <item name="android:navigationBarColor">@color/black_primary</item>
    </style>


    <style name="White" parent="AppTheme">
        <item name="colorPrimary">@color/white_primary</item>
        <item name="colorPrimaryDark">@color/white_primary_dark</item>
        <item name="colorAccent">@color/white_accent</item>
        <item name="primaryText">@color/white_primary_text</item>
        <item name="secondaryText">@color/white_secondary_text</item>
    </style>

    <style name="splash" parent="Black">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Default.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="textAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/purple_dark_secondary_text</item>
        <item name="colorControlActivated">@color/purple_dark_accent</item>
    </style>

    <style name="White.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/accent</item>
        <item name="android:trackTint" tools:targetApi="m">@color/gray_light</item>
    </style>

</resources>
